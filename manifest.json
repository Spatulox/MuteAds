{

  "manifest_version": 3,
  "name": "MuteDeezerAds",
  "version": "1.0",
  "description": "Mute Deezers tabs when there is an ad",
  
  "browser_specific_settings": {
    "gecko": {
      "id": "MuteDeezerAds@MuteDeezerAds",
      "strict_min_version": "109.0"
    }
  },

  "permissions": [
    "tabs",
    "scripting"
  ],

  "host_permissions": [
    "*://*.deezer.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["muteTabs.js"],
      "matches": ["*://*.deezer.com/*"]
    }
  ]
}

